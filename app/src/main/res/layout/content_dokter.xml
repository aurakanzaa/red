<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DokterActivity"
    android:background="@drawable/pattern"
    tools:showIn="@layout/activity_dokter">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">
        <Button
            android:id="@+id/janji"
            android:layout_marginBottom="15dp"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Buat janji"
            android:textColor="@color/white"
            android:background="@drawable/btn_green"/>

        <android.support.v7.widget.CardView
            android:layout_below="@+id/janji"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <!--tentang dokter-->
                <TextView
                    android:id="@+id/tentang_dokter_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tentang Dokter"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/tentang_dokter"
                    android:layout_marginBottom="13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ini nanti isinya deskripsi tentang dokternta ya bay!!!"/>

                <!--spesialisasi-->
                <TextView
                    android:id="@+id/spesialisasi_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Spesialisasi"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/spesialisasi"
                    android:layout_marginBottom="13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Spesialis Saraf"/>

                <!--lokasi-->
                <TextView
                    android:id="@+id/lokasi_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamat Praktik Dokter"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/rs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="RSU Brawijaya Malang"/>

                <TextView
                    android:id="@+id/alamat"
                    android:layout_marginBottom="13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jl. Suhat no. 9"/>

                <!--harga-->
                <TextView
                    android:id="@+id/harga_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mulai dari"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"/>
                <TextView
                    android:id="@+id/lokasi"
                    android:layout_marginBottom="13dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp. 300.000,-"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>