<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.DetailContactFragment"
    android:background="@drawable/pattern">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgSima"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="#00d"/>

            <TextView
                android:id="@+id/nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Nama"
                android:layout_below="@id/imgSima"
                android:layout_centerHorizontal="true"
                android:textSize="20dp"
                android:textStyle="bold" />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/alamat"
                android:layout_marginStart="14dp"
                android:src="@drawable/rumah"
                android:layout_marginLeft="14dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/no_telepon"
                android:layout_marginStart="14dp"
                android:src="@drawable/telp"
                android:layout_marginLeft="14dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/email"
                android:layout_marginStart="14dp"
                android:src="@drawable/mail"
                android:layout_marginLeft="14dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/website"
                android:layout_marginStart="14dp"
                android:src="@drawable/web"
                android:layout_marginLeft="14dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/facebook"
                android:layout_marginStart="14dp"
                android:src="@drawable/fesbuk"
                android:layout_marginLeft="14dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/instagram"
                android:layout_marginStart="14dp"
                android:src="@drawable/insta"
                android:layout_marginLeft="14dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/twitter"
                android:layout_marginStart="14dp"
                android:src="@drawable/twit"
                android:layout_marginLeft="14dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/whatsapp"
                android:layout_marginStart="14dp"
                android:src="@drawable/wasap"
                android:layout_marginLeft="14dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/hari"
                android:layout_marginStart="14dp"
                android:src="@drawable/jam"
                android:layout_marginLeft="14dp" />

            <TextView
                android:id="@+id/alamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nama"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="9dp"
                android:text="Alamat"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/no_telepon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/alamat"
                android:layout_below="@+id/alamat"
                android:layout_marginTop="9dp"
                android:text="No Telepon"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_alignLeft="@+id/alamat" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/alamat"
                android:layout_below="@+id/no_telepon"
                android:layout_marginTop="9dp"
                android:text="Email"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_alignLeft="@+id/alamat" />

            <TextView
                android:id="@+id/website"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/alamat"
                android:layout_below="@+id/email"
                android:layout_marginTop="9dp"
                android:text="Website"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_alignLeft="@+id/alamat" />

            <TextView
                android:id="@+id/facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/alamat"
                android:layout_below="@+id/website"
                android:layout_marginTop="9dp"
                android:text="Facebook"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_alignLeft="@+id/alamat" />

            <TextView
                android:id="@+id/instagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/alamat"
                android:layout_below="@+id/facebook"
                android:layout_marginTop="9dp"
                android:text="Instagram"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_alignLeft="@+id/alamat" />

            <TextView
                android:id="@+id/twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/alamat"
                android:layout_below="@+id/instagram"
                android:layout_marginTop="9dp"
                android:text="Twitter"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_alignLeft="@+id/alamat" />

            <TextView
                android:id="@+id/whatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/alamat"
                android:layout_below="@+id/twitter"
                android:layout_marginTop="9dp"
                android:text="Whatsapp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_alignLeft="@+id/alamat" />

            <TextView
                android:id="@+id/hari"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/alamat"
                android:layout_below="@+id/whatsapp"
                android:layout_marginTop="9dp"
                android:text="Hari"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_alignLeft="@+id/alamat" />

            <TextView
                android:id="@+id/jam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/whatsapp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="8dp"
                android:text="Jam"
                android:textSize="20dp"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvJamBuka"
                android:layout_below="@+id/hari"
                android:layout_alignStart="@+id/alamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_alignLeft="@+id/alamat">

            </android.support.v7.widget.RecyclerView>

            <Button
                android:id="@+id/btnDirection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:background="#53b63f"
                android:layout_below="@id/rvJamBuka"
                android:text="Get Direction"
                android:textColor="#FFF" />



        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</FrameLayout>